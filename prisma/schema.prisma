// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Content {
  id   String @id @default(uuid())
  path String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // metadata field
  title       String?
  artist      String?
  album       String?
  albumArtist String?
  genre       String?
  trackNumber Int?
  year        Int?
  comment     String?
  duration    Int

  pictureId String?
  pictureModel Picture? @relation(fields: [pictureId], references: [id])

  // relations
  albumId  String?
  albumModel    Album?   @relation(fields: [albumId], references: [id])

  artists ArtistsOnContents[]
}

model Artist {
  id   String @id @default(uuid())
  name String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  albums Album[]

  contents ArtistsOnContents[]
}

model ArtistsOnContents {
  artistId String
  contentId String

  artistModel Artist @relation(fields: [artistId], references: [id])
  contentModel Content @relation(fields: [contentId], references: [id])

  @@id([artistId, contentId])
}
model Album {
  id   String @id @default(uuid())
  name String
  albumArtist String?
  albumPath String?

  artistId String?
  artistModel   Artist?  @relation(fields: [artistId], references: [id])

  contents Content[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pictureId String?
  pictureModel Picture? @relation(fields: [pictureId], references: [id])

  @@unique([name, albumArtist])
}

model Picture {
  id   String @id @default(uuid())

  type String
  size Int
  data Bytes
  hash String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  albums Album[]
  contents Content[]
}
